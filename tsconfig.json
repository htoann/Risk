{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./components/*"],
      "@container/*": ["./container/*"],
      "@i18n/*": ["./i18n/*"],
      "@layout/*": ["./layout/*"], 
      "@pages/*": ["./pages/*"],
      "@routes/*": ["./routes/*"],
      "@static/*": ["./static/*"],
      "@utils/*": ["./utils/*"],
      "@service/*": ["./service/*"],
      "@context/*": ["./context/*"]
    }
  },
  "include": ["src"]
}
